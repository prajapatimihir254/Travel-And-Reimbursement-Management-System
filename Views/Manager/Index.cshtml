@{
    ViewData["title"] = "Manager DashBoard";
}
<div class="container mt-4">
    <div class="alert alert-success">
        <h2>Manager Approval Dashboard ✅</h2>
        <p>Welcome @Context.Session.GetString("UserName")! Here You Can Manage Or Approve The Request</p>
    </div>
    @* <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a> *@
</div>

@model List<BizTravel.Models.TravelRequest>
<table class="table table-hover shadow-sm mt-3">
    <thead class="table-dark">
        <tr>
            <th>Employee</th>
            <th>Destination</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.EmployeeEmail</td>
                <td>@item.EstimatedAmount</td>
                <td>@item.TravelDate.ToShortDateString()</td>
                <td>
                    <form asp-controller="Manager" asp-action="UpdateStatus" method="post" style="display:inline;">
                        <input type="hidden" name="requestID" value="@item.RequestId"/>
                        <button type="submit" name="newStatus" value="Approved" class="btn btn-sm btn-success">Approve</button>
                        <button type="submit" name="newStatus" value="Rejected" class="btn btn-sm btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>