@model List<BizTravel.Models.TravelRequest>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7f6;
    }

    /* 1. Header Banner */
    .manager-banner {
        background: linear-gradient(135deg, #198754, #20c997);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 20px rgba(25, 135, 84, 0.2);
    }

    /* 2. Card Table */
    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        padding: 20px;
    }

    .table thead th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: 600;
        border: none;
        padding: 15px;
        font-size: 0.9rem;
    }

    .table tbody td {
        vertical-align: middle;
        padding: 15px;
        font-size: 0.9rem;
    }

    /* 3. Action Buttons Styles */
    .btn-approve {
        background-color: #d1e7dd;
        color: #198754;
        border: none;
        font-weight: 600;
    }

        .btn-approve:hover {
            background-color: #198754;
            color: white;
        }

    .btn-reject {
        background-color: #f8d7da;
        color: #842029;
        border: none;
        font-weight: 600;
    }

        .btn-reject:hover {
            background-color: #dc3545;
            color: white;
        }
</style>

<div class="container mt-4 mb-5">

    <div class="manager-banner animate__animated animate__fadeInDown">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-check2-square me-2"></i>Approval Dashboard</h2>
                <p class="mb-0 opacity-75">Welcome, @Context.Session.GetString("UserName")! Manage team requests here.</p>
            </div>
        </div>
    </div>

    <div class="table-card animate__animated animate__fadeInUp">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Email Id</th>
                        <th>Destination</th>
                        <th>Purpose</th>
                        <th>Amount</th>
                        <th>Duration (From-To)</th>
                        <th>Bill</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold text-dark">@item.EmployeeEmail</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">@item.City</span><br>
                                <small class="text-muted">@item.State, @item.Country</small>
                            </td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 150px;" title="@item.Purpose">
                                    @item.Purpose
                                </span>
                            </td>
                            <td class="fw-bold text-success">₹@item.EstimatedAmount</td>
                            <td>
                                <div class="small">
                                    <span class="text-success fw-bold">Departure Date: @item.TravelDate.ToString("dd-MM-yyyy")</span>
                                </div>
                                <div class="small">
                                    <span class="text-danger fw-bold">Return Date: @item.ReturnDate.ToString("dd-MM-yyyy")</span>
                                </div>
                            </td>

                            <td>
                                <button type="button" class="btn btn-sm btn-light border" onclick="showBill('@item.BillFilePath')">
                                    <i class="bi bi-eye text-primary"></i> View
                                </button>
                            </td>

                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <form asp-controller="Manager" asp-action="UpdateStatus" method="post">
                                        <input type="hidden" name="requestID" value="@item.RequestId" />

                                        <input type="text" name="reason" id="reason_@item.RequestId"
                                               class="form-control form-control-sm mb-2 border-danger"
                                               placeholder="Reason for rejection..." style="display:none;" />

                                        <button type="submit" name="newStatus" value="Approved" id="btnApprove_@item.RequestId"
                                                class="btn btn-sm btn-approve me-1">
                                            <i class="bi bi-check-lg"></i> Approve
                                        </button>

                                        <button type="button" onclick="showReasonBox('@item.RequestId')" id="btnReject_@item.RequestId"
                                                class="btn btn-sm btn-reject">
                                            <i class="bi bi-x-lg"></i> Reject
                                        </button>

                                        <button type="submit" name="newStatus" value="Rejected" id="submitReject_@item.RequestId"
                                                class="btn btn-sm btn-danger w-100" style="display:none;">
                                            Confirm Rejection
                                        </button>

                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small"><i class="bi bi-check-all"></i> Processed</span>
                                }
                            </td>

                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill">Pending</span>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <span class="badge bg-info text-dark rounded-pill">Approved</span>
                                }
                                else if (item.Status == "Settled")
                                {
                                    <span class="badge bg-success rounded-pill">Settled</span>
                                }
                                else if (item.Status == "Rejected")
                                {
                                    <span class="badge bg-danger rounded-pill">Rejected</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <div class="text-muted mb-3" style="font-size: 3rem; opacity:0.3;">
                    <i class="bi bi-suitcase-lg"></i>
                </div>
                <h5 class="text-muted">No travel requests found.</h5>
                <p class="text-muted small">Waiting for Emplyee's New Request.</p>
            </div>
        }
    </div>
</div>

@* when the bill is not show *@
<div class="modal fade" id="billModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-header">Bill Attachment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div id="billContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showBill(path)
        {
            console.log("Path Recived:" + path);
            var content = document.getElementById('billContent');

            if(!path || path === "" || path === "null")
            {
                content.innerHTML = "<div class = 'alert alert-warming'>No Bill Uploaded By Employee</div>"
            }
            else
            {
                if(path.toLowerCase().endsWith('.pdf'))
                {
                    content.innerHTML = `<embed src = "${path}" type = "application/pdf" width="100%" height="500px">`;
                }
                else
                {
                    content.innerHTML = `<img src = "${path}" class="img-fluid rounded shadow" style = "max-height:500px;">`;
                }
            }

            var modalElement = document.getElementById('billModal');
            if(modalElement)
            {
                var myModal = new bootstrap.Modal(modalElement);
                myModal.show();
            }
            else{
                console.error("Modal element 'billModal' not found in html");
            }
        }
    </script>

    <script>
        function showReasonBox(id){
            document.getElementById('reason_' + id).style.display = 'block';
            document.getElementById('submitReject_' + id).style.display = 'inline-block';
            document.getElementById('btnReject_' + id).style.display = 'none';
            document.getElementById('btnApprove_' + id).style.display = 'none';
            //document.getElementById('reason_' + id).setAttribute('required','required');
        }
    </script>
}
