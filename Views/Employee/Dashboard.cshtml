@{
    ViewData["title"] = "Employee Dashboard";
}
<div class="jumbotron p-4 mb-4 bg-light rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-5">Employee Dashboard</h1>
            <p class="lead">Welcome back,<strong>@ViewBag.Fullname</strong></p>
        </div>
        <div class="text-end">
            <h5 class="text-primary">Emp Id:<span class="badge bg-primary">@ViewBag.EmpId</span></h5>
        </div>
    </div>
    @* <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a> *@
    <a asp-action="RaiseClaim" class="btn btn-success">Raise New Travel Claim</a>
</div>

@model List<BizTravel.Models.TravelRequest>
<div class="container mt-5">
    <div class="card shadow">
        
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h4>My Travel Requests</h4>
            <a asp-action="RaiseClaim" class="btn btn-light btn-sm">+Raise New Claim</a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
    <tr>
        <th>Date</th>
        @* <th>Destination</th> *@
        <th>Location (Country/State/City)</th>
        <th>Purpose</th>
        <th>Amount</th>
        <th>Status</th>
    </tr>
                </thead>
                <tbody>
    @foreach(var item in Model){
        <tr>
            <td>@item.TravelDate.ToShortDateString()</td>
            @* <td>@item.Destination</td> *@
            <td>
                @item.Country,@item.State,@item.City
            </td>
            
            <td>@item.Purpose</td>
            <td>@item.EstimatedAmount.ToString("N2")₹</td>
            <td>
                <span class="badge@(item.Status == "Pending" ? "bg-warning" : "bg-success")">@item.Status</span>
                </td>
        </tr>
    }
                </tbody>
</table>
        </div>
    </div>
</div>