@{
    ViewData["Title"] = "Login";

    // 1. Logic to decide Color & Title based on Role
    string role = ViewBag.SelectedRole as string;
    string themeColor = "primary"; // Default Blue (Admin/Generic)
    string roleTitle = "Login Here";
    string icon = "bi-person-circle";

    if (role == "Admin")
    {
        themeColor = "primary"; // Blue
        roleTitle = "Admin Login";
        icon = "bi-shield-lock";
    }
    else if (role == "Manager")
    {
        themeColor = "success"; // Green
        roleTitle = "Manager Login";
        icon = "bi-briefcase";
    }
    else if (role == "Accountant")
    {
        themeColor = "warning"; // Yellow/Orange
        roleTitle = "Accountant Login";
        icon = "bi-calculator";
    }
    else if (role == "Employee")
    {
        themeColor = "info"; // Light Blue/Cyan
        roleTitle = "Employee Login";
        icon = "bi-airplane-engines";
    }
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa; /* Light background taaki white card pop kare */
    }

    .login-container {
        margin-top: 80px;
    }

    .card-custom {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05); /* Soft Shadow jaisa purane design me tha */
        padding: 40px;
        background: white;
    }

    .brand-title {
        font-weight: 700;
        margin-bottom: 5px;
    }

    .login-subtitle {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 30px;
    }

    .form-control {
        height: 50px;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding-left: 15px;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: var(--bs- @themeColor ); /* Dynamic Focus Color */
        }

    .btn-login {
        height: 50px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
    }

    /* Input Labels ko thoda clean dikhane ke liye */
    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 8px;
    }
</style>

<div class="container login-container">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="card-custom text-center animate__animated animate__fadeInUp">

                <h2 class="brand-title text-@themeColor">
                    <i class="bi @icon me-2"></i>BizTravel
                </h2>
                <p class="login-subtitle">@roleTitle</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger py-2 mb-3 small">
                        @ViewBag.Error
                    </div>
                }

                <form asp-action="Login" method="post" class="text-start">

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-@themeColor text-white btn-login">
                            Login
                        </button>
                    </div>

                </form>

                <div class="mt-4 text-center">
                    <a asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    // Back button disable karne ke liye
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
</script>