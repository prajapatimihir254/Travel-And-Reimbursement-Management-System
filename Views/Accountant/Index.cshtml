@{
    ViewData["title"] = "Accountant Dashboard";
}
<div class="container mt-4">
    <div class="alert alert-warning">
        <h2>Accountant Approval Dashboard</h2>
        <p>Welcome @Context.Session.GetString("UserName")!Manage The Bills And Account</p>
    </div>
    @* <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a> *@
</div>

@model List<BizTravel.Models.TravelRequest>
<div class="container mt-4">
    <div class="d-flex justify-content-between">
        <h2>Accountant - Payment Portal</h2>
        <h4 class="text-success">Total Payable: @Model.Sum(x => x.EstimatedAmount).ToString("C")</h4>
    </div>
    
    <table class="table table-striped border mt-3">
        <thead class="table-dark">
            <tr>
                <th>Emp Email</th>
                <th>Destination</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.EmployeeEmail</td>
                    <td>@item.EstimatedAmount</td>
                    <td><span class="badge bg-success">@item.Status</span></td>
                    <td>
                        <form asp-action="SettleClaim" method="post">
                            <input type="hidden" name="requestId" value="@item.RequestId" />
                            <button type="submit" class="btn btn-primary btn-sm">Mark As Paid</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>