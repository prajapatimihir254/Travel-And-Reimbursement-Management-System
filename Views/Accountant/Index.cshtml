@model List<BizTravel.Models.TravelRequest>
@{
    ViewData["Title"] = "Accountant Dashboard";

    // Total Payable logic
    var totalPayable = Model.Sum(x => x.EstimatedAmount);
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7f6;
    }

    /* 1. Golden Banner */
    .accountant-banner {
        background: linear-gradient(135deg, #ffc107, #ff9800); /* Yellow/Orange Gradient */
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 20px rgba(255, 193, 7, 0.2);
    }

    .text-shadow {
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    }

    /* 2. Card Table */
    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        padding: 10px;
    }

    .table thead th {
        background-color: #fff8e1; /* Very Light Yellow */
        color: #b7791f; /* Dark Gold Text */
        font-weight: 600;
        border: none;
        padding: 15px;
        font-size: 0.9rem;
    }

    .table tbody td {
        vertical-align: middle;
        padding: 15px;
        font-size: 0.9rem;
    }

    .action-col {
        min-width: 180px;
    }
    
    .date-block{
        display: flex;
        flex-direction: column;
        line-height: 1.2;
        min-width: 110px;
    }

    .date-label {
        font-size: 0.65rem;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 2px;
    }

    .date-value {
        font-size: 0.85rem;
        color: #333;
        margin-bottom: 5px;
    }

    /* Settle Input & Button */
    .settle-input {
        border: 1px solid #ced4da;
        border-radius: 0 5px 5px 0;
    }

    .settle-btn {
        border-radius: 5px;
        font-weight: 600;
        background-color: #198754;
        color: white;
        border: none;
    }

        .settle-btn:hover {
            background-color: #157347;
        }
</style>

<div class="container mt-4 mb-5">

    <div class="accountant-banner animate__animated animate__fadeInDown">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1 text-shadow"><i class="bi bi-wallet2 me-2"></i>Payment Portal</h2>
                <p class="mb-0 text-white-50">Welcome, @Context.Session.GetString("UserName")! Manage bills & accounts.</p>
            </div>
            <div class="text-end">
                <p class="mb-0 text-white-50 small text-uppercase">Total Payable</p>
                <h2 class="fw-bold text-shadow">@totalPayable.ToString("C")</h2>
            </div>
        </div>
    </div>

    <div class="table-card animate__animated animate__fadeInUp">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Email Id</th>
                        <th>Destination</th>
                        <th>Purpose</th>
                        <th>Amount</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Bill</th>
                        <th class="action-col text-center">Action (Settle)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold text-dark">@item.EmployeeEmail</div>
                            </td>

                            <td>
                                <span class="badge bg-light text-dark border">@item.City</span><br>
                                <small class="text-muted">@item.State, @item.Country</small>
                            </td>

                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 150px;" title="@item.Purpose">
                                    @item.Purpose
                                </span>
                            </td>

                            <td class="fw-bold text-success">₹@item.EstimatedAmount</td>

                            <td>
                                <div class="date-block">
                                    <div class="mb-1">
                                        @* <span class="date-label text-primary">Dep:</span> *@
                                        <span class="date-value d-block date-label text-warning">Dep: @item.TravelDate.ToString("dd MMM yyyy")</span>
                                    </div>
                                    <div>
                                        @* <span class="date-label text-danger">Ret:</span> *@
                                        <span class="date-value d-block date-label text-danger">Ret: @item.ReturnDate.ToString("dd MMM yyyy")</span>
                                    </div>
                                </div>
                            </td>

                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill">Pending</span>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <span class="badge bg-info text-dark rounded-pill">Approved</span>
                                }
                                else if (item.Status == "Settled")
                                {
                                    <span class="badge bg-success rounded-pill"><i class="bi bi-check-all"></i> Paid</span>
                                }
                                else if (item.Status == "Rejected")
                                {
                                    <span class="badge bg-danger rounded-pill">Rejected</span>
                                }
                            </td>

                            <td>
                                <button type="button" class="btn btn-sm btn-light border text-primary" onclick="showBill('@item.BillFilePath')">
                                    <i class="bi bi-eye"></i> View
                                </button>
                            </td>

                            <td class="action-col">
                                @if (item.Status == "Settled")
                                {
                                    <span class="text-muted small"><i class="bi bi-lock-fill"></i>Already Settled</span>
                                }
                                else
                                {
                                    <form asp-action="SettleClaim" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="requestId" value="@item.RequestId" />

                                        <div class="input-group input-group-sm me-2" style="width: 130px;">
                                            <span class="input-group-text bg-light">₹</span>
                                            <input type="number" name="finalAmount" value="@item.EstimatedAmount" class="form-control settle-input" required />
                                        </div>

                                        <button type="submit" class="btn btn-sm settle-btn shadow-sm">Pay
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <div class="text-muted mb-3" style="font-size: 3rem; opacity:0.3;">
                    <i class="bi bi-suitcase-lg"></i>
                </div>
                <h5 class="text-muted">No travel requests found.</h5>
                <p class="text-muted small">Ready for your first trip? Click 'Raise New Claim' to start.</p>
            </div>
        }
    </div>
    </div>

@* when the bill is not show *@
<div class="modal fade" id="billModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-header">Bill Attachment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div id="billContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showBill(path)
        {
            console.log("Path Recived:" + path);
            var content = document.getElementById('billContent');

            if(!path || path === "" || path === "null")
            {
                content.innerHTML = "<div class = 'alert alert-warming'>No Bill Uploaded By Employee</div>"
            } 
            else
            {
                if(path.toLowerCase().endsWith('.pdf'))
                {
                    content.innerHTML = `<embed src = "${path}" type = "application/pdf" width="100%" height="500px">`;
                }
                else
                {
                    content.innerHTML = `<img src = "${path}" class="img-fluid rounded shadow" style = "max-height:500px;">`;
                }
            }

            var modalElement = document.getElementById('billModal');
            if(modalElement)
            {
                var myModal = new bootstrap.Modal(modalElement);
                myModal.show();
            }
            else{
                console.error("Modal element 'billModal' not found in html");
            }
        }
    </script>
}